<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models ="clr-namespace:DataBiding.Coleccion.Models"
             x:Class="DataBiding.Coleccion.Views.MainPage"
             Title=""
             BackgroundColor="#F0F0F0">
    <Grid
        RowDefinitions="Auto,*,Auto"
        Padding="16"
        RowSpacing="20">
        <Grid
            ColumnDefinitions="*,Auto,Auto"
            ColumnSpacing="4">
            <Label
                Text="Origenes del paquete:"
                VerticalOptions="Center"/>
            <Button
                Grid.Column="1"
                Text="+"
                FontSize="25"
                BackgroundColor="#FAFAFA"
                TextColor="#28A745"
                BorderColor="#C0C0C0"
                BorderWidth="1"
                FontAttributes="Bold"
                CornerRadius="3"
                HeightRequest="30"
                WidthRequest="30"
                Clicked="OnAgregarButtonClicked"/>
            <Button
                Grid.Column="2"
                Text="X"
                FontSize="20"
                BackgroundColor="#FAFAFA"
                TextColor="#DC3545"
                BorderColor="#C0C0C0"
                BorderWidth="1"
                FontAttributes="Bold"
                CornerRadius="3"
                HeightRequest="30"
                WidthRequest="30"
                Clicked="OnDeleteButtonClicked"/>
        </Grid>

        <CollectionView
            Grid.Row="1"
            BackgroundColor="White"
            SelectionMode="Single"
            EmptyView="Aún no se registran orígenes de paquetes"
            SelectionChanged="OrigenesListView_SelectionChanged"
            x:Name=" OrigenesListView">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type models:OrigenDePaquete}">
                    <Border
                        Stroke="LightSkyBlue"
                        Padding="8">
                        <Grid
                            RowDefinitions="Auto,*"
                            ColumnDefinitions="Auto,Auto">
                            <CheckBox
                                Grid.RowSpan="2"
                                IsChecked="False"/>
                            <Label
                                Grid.Column="1"
                                Text="Empty"/>
                        </Grid>
                        
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <!--<ListView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Superman</x:String>
                    <x:String>Thor</x:String>
                    <x:String>Batman</x:String>
                    <x:String>Spiderman</x:String>
                </x:Array>
            </ListView.ItemsSource>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Label
                        Text=""
                        FontSize="16"/>
                </DataTemplate>
            </ListView.ItemTemplate>-->
        </CollectionView>
        
        <Grid
            Grid.Row="2"
            RowDefinitions="Auto,Auto,Auto"
            ColumnDefinitions="Auto,*,Auto"
            RowSpacing="10"
            ColumnSpacing="8">
            <Label
                Text="Nombre: "
                VerticalOptions="Center"/>
            <Entry
                Grid.Column="1"
                BackgroundColor="#FAFAFA"
                VerticalOptions="Center"
                x:Name="NombreEntry"/>
            <Label
                Grid.Row="1"
                Text="Origen: "
                VerticalOptions="Center"/>
            <Entry
                Grid.Row="1"
                Grid.Column="1"
                BackgroundColor="#FAFAFA"
                VerticalOptions="Center"
                x:Name="OrigenEntry"/>
            <Button
                Grid.Row="1"
                Grid.Column="2"
                Text="Actualizar"
                BackgroundColor="#FAFAFA"
                TextColor="Black"
                BorderColor="#C0C0C0"
                BorderWidth="1"
                CornerRadius="3"
                Clicked="OnActualizarButton_Clicked"/>
        </Grid>
        
        <!--<HorizontalStackLayout 
            Grid.Row="3"
            HorizontalOptions="End"
